@using static DomainLayer.Models.Common.Paging
@model PagingViewModel
@{
    int a = 0;
}
@if (Model != null)
{
    <nav aria-label="Page navigation">
        <ul class="pagination pagination-primary justify-content-center">
            <!-- Prev button -->

            <li class="page-item prev">
                <a onclick="FillPageNumber(1)" class="page-link" href="javascript:void(0);">
                    <i class="tf-icon bx bx-chevrons-left"></i>
                </a>
            </li>

            @if (Model.Page != 1)
            {
                <li class="page-item prev">
                    <a onclick="FillPageNumber(@(Model.Page-1))" class="page-link" href="javascript:void(0);">
                        <i class="tf-icon bx bx-chevron-left"></i>
                    </a>
                </li>
            }

            <!-- Page numbers -->
            @for (int i = Model.StartPage; i <= Model.EndPage; i++)
            {
                <li class="page-item @(Model.Page == i ? "active" : "")">
                    <a onclick="FillPageNumber(@i)" class="page-link" href="javascript:void(0);">@i</a>
                </li>
            }

            <!-- Next button -->
            @if (Model.EndPage != Model.Page && Model.PageCount > 1)
            {
                <li class="page-item next">
                    <a onclick="FillPageNumber(@(Model.Page + 1))" class="page-link" href="javascript:void(0);">
                        <i class="tf-icon bx bx-chevron-right"></i>
                    </a>
                </li>
            }
            <li class="page-item next">
                <a onclick="FillPageNumber(@(Model.PageCount))" class="page-link" href="javascript:void(0);">
                    <i class="tf-icon bx bx-chevrons-right"></i>
                </a>
            </li>

        </ul>
    </nav>
}

