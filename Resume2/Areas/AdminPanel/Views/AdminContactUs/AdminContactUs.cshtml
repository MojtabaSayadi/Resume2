@model List<AdminContactUsViewModel>

<div class="card">

	<h5 class="card-header heading-color">جدول با سرتیتر تیره</h5>
	<div class="table-responsive text-nowrap">
		<table class="table">
			<thead class="table-dark">
				<tr>
					<th>id</th>
					<th>Fullname</th>
					<th>PhoneNumber</th>
					<th>Message</th>
					<th>CreatedDateS</th>

					<th>Action</th>

				</tr>
			</thead>
			<tbody class="table-border-bottom-0">
				@if (Model != null)
				{
					int i = 0;
					foreach (var item in Model)
					{
						i++;
						<tr>
							<td>@i</td>
							<td>@item.Fullname</td>
							<td>@item.PhoneNumber </td>
							<td>@item.Message</td>
							<td>@item.CreatedDateS</td>
							<td>
								<div class="dropdown">
									<button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
										<i class="bx bx-dots-vertical-rounded"></i>
									</button>
									<div class="dropdown-menu">
										<a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> ویرایش</a>
										<a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> حذف</a>
									</div>
								</div>
							</td>
						</tr>
						
						

					}

				}
				else
				{
					<tr>
						<td>
							"داده ای جهت نمایش یافت نشد"
						</td>
					</tr>

				}



			</tbody>
		</table>
	</div>
</div>